<%-include('../cabecalho.ejs')%>

<div class="list-card">
  <div class="list-btn-wrapper">
    <a href="/aluno/add" class="list-btn">Adicionar Alunos</a>
  </div>

  <h1>Aluno</h1>

  <table>
    <tr>
      <th>Nome</th>
      <th>Matrícula</th>
      <th>Ações</th>
    </tr>
    <% Alunos.forEach(function(aluno){ %>
      <tr>
        <td><%aluno.nome%></td>
        <td><%aluno.matricula%></td>
        <td></td>
      </tr>
    <% }) %>
  </table>
</div>

